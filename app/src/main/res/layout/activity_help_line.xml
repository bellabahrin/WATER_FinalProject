<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepagebg"
    tools:context=".helplineactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="@color/lightblue">

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/contactus"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Line"
                android:textSize="20sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/daretro_regular"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>

            <ImageButton
                android:onClick="BackContact"
                android:id="@+id/Back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-0dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/callus_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/contactus2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/callus_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call us"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/callus_logo"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/emailus_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emailus"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/emailus_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email us"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_below="@+id/emailus_logo"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/visitus_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/visitus"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/visitus_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email us"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_below="@+id/visitus_logo"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="-420dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/copyText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp">



                    <TextView
                        android:id="@+id/call_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="  011-1111111"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="20sp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:padding="0dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/copyText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/emailus_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="20dp"
                        android:includeFontPadding="false"
                        android:text="waterappmanagement@gmail.com"
                        android:textColor="@color/darkblue"
                        android:textSize="18sp" />


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:padding="0dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/copyText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/visitus_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="20dp"
                        android:includeFontPadding="false"
                        android:text="Kuala Lumpur, Malaysia"
                        android:textColor="@color/darkblue"
                        android:textSize="18sp" />


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>




    </LinearLayout>




</RelativeLayout>