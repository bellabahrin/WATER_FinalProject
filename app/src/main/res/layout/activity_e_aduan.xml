<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".eaduanactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="@color/lightblue">

            <ImageView
                android:id="@+id/help_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/eaduan"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Aduan"
                android:textSize="20sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/daretro_regular"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>

            <ImageButton
                android:onClick="BackEAduan"
                android:id="@+id/Back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="-40dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/guide_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/waterrs"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/eaduan_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facing any recurrent and prolong issue?"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="13sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_below="@+id/guide_logo"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/eaduan_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facing any recurrent and prolong issue?"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="13sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_below="@+id/guide_logo"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-0dp"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lodge_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lodge your aduan here"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="15sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_centerHorizontal="true"/>

                    <EditText
                        android:id="@+id/username_aduan"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:hint="username"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/lodge_txt"
                        android:layout_centerHorizontal="true"/>


                    <EditText
                        android:id="@+id/aduan"
                        android:layout_width="350dp"
                        android:layout_height="120dp"
                        android:hint="write your aduan here"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/username_aduan"
                        android:layout_centerHorizontal="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/eaduan_btn"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:textColor="@color/lightblue"
        android:background="@drawable/button_round"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="640dp">

        <com.google.android.material.card.MaterialCardView
            android:onClick="EmergencyEAduan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="10dp"
            app:cardBackgroundColor="#F19390"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:onClick="EmergencyEAduan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/emergency_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/eaduan2"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/emergency_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="EMERGENCY?"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:textSize="15sp"
                    android:fontFamily="@font/daretro_regular"
                    android:layout_toRightOf="@+id/emergency_logo"/>


                <TextView
                    android:id="@+id/emergency_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get in touch with our helpline here."
                    android:includeFontPadding="false"
                    android:textSize="10sp"
                    android:fontFamily="@font/daretro_regular"
                    android:layout_toRightOf="@+id/emergency_logo"
                    android:layout_below="@+id/emergency_txt"/>



            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>





</RelativeLayout>