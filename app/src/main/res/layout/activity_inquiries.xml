<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".inquiries">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="@color/lightblue">

        <ImageView
            android:id="@+id/help_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/inquiries"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inquiries"
            android:textSize="20sp"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/daretro_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <ImageButton
            android:onClick="BackInquiries"
            android:id="@+id/Back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/back"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="-40dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/softyellow"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/inquiries_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get in touch with us"
                    android:textColor="@color/darkblue"
                    android:includeFontPadding="false"
                    android:textSize="13sp"
                    android:fontFamily="@font/daretro_regular"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-0dp"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/softyellow"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <EditText
                    android:id="@+id/username_inquiries"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="username"
                    android:textColor="@color/darkblue"
                    android:textColorHint="@color/darkblue"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/softyellow"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <EditText
                    android:id="@+id/email_inquiries"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="email"
                    android:textColor="@color/darkblue"
                    android:textColorHint="@color/darkblue"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/softyellow"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <EditText
                    android:id="@+id/subject_inquiries"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="subject"
                    android:textColor="@color/darkblue"
                    android:textColorHint="@color/darkblue"
                    android:inputType="textEmailSubject"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/softyellow"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <EditText
                    android:id="@+id/message_inquiries"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:hint="message"
                    android:textColor="@color/darkblue"
                    android:textColorHint="@color/darkblue"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:inputType="textMultiLine"
                    android:layout_centerHorizontal="true"/>



            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>


    <Button
        android:id="@+id/inquiries_btn"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="650dp"
        android:textColor="@color/lightblue"
        android:background="@drawable/button_round"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Send Message"
        android:gravity="center_horizontal" />

</RelativeLayout>