<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".faqs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="@color/lightblue">

            <ImageView
                android:id="@+id/help_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/faq"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQs"
                android:textSize="20sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/daretro_regular"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>

            <ImageButton
                android:onClick="BackFaqs"
                android:id="@+id/Back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back"/>



        </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="20dp"
            android:layout_marginTop="-0dp"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/faqs1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/faqs1_ques"
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:hint="How does water news work?"
                        android:inputType="text"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/faqs1_Ans"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:hint="You need to enter the desired date of news at the search bar."
                        android:inputType="text"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:textColorHint="@color/darkblue"
                        android:textSize="12sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/faqs1_ques"
                        android:layout_centerHorizontal="true"/>





                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/fas2_Ans"
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:hint="How do I contact for futher follow ups?"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/faqs2_Ans"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:hint="You may contact us through our helpline for follow up."
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="12sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/fas2_Ans"
                        android:layout_centerHorizontal="true"/>




                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/faqs3_ques"
                        android:layout_width="350dp"
                        android:layout_height="30dp"
                        android:hint="What is the main reasons for water disturbance?"
                        android:inputType="textEmailSubject"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="15dp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/faqs3_Ans"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:hint="The disturbance could be cause by nature or mankind."
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="13sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/faqs3_ques"
                        android:layout_centerHorizontal="true"/>



                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/faqs4_ques"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:hint="What is the region that covered in this app?"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:inputType="textImeMultiLine"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/faqs4_Ans"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:hint="The region covered by this app is only Klang Valley."
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textColorHint="@color/darkblue"
                        android:textSize="12dp"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/faqs4_ques"
                        android:layout_centerHorizontal="true"/>




                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>