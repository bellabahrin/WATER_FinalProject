        </LinearLayout>

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="-20dp">

            <com.google.android.material.card.MaterialCardView
                android:onClick="guide_card"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/guide_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/chat"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/chat_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Feeling lost? Follow this star for guidance"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="12sp"
                        android:fontFamily="@font/kbcloudyday"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="-10dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/blue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/announce_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Annoucement"
                        android:textColor="@android:color/white"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/kbcloudyday"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-20dp">

            <com.google.android.material.card.MaterialCardView
                android:onClick="Announcement1"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/announce1_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/announce1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/announce1_txt"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Water News"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/kbcloudyday"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/announce1_logo"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:onClick="Announcement2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/announce2_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/announce2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/announce2_txt"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Water Maintenance"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/kbcloudyday"
                        android:layout_below="@+id/announce2_logo"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>





        </LinearLayout>

    </LinearLayout>

</RelativeLayout>