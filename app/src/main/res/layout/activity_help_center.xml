<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".helpcenteractivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="@color/lightblue">

            <ImageView
                android:id="@+id/help_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/helpcenter"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Center"
                android:textSize="20sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/daretro_regular"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>

            <ImageButton
                android:onClick="BackHelpCenter"
                android:id="@+id/Back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="-40dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/guide_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/chat"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/chat_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We are here to assist and guide you."
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="13sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_below="@+id/guide_logo"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-0dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:onClick="inquiriesCard"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/viewList_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/inquiries"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/viewList_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inquiries"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/viewList_logo"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:onClick="faqsCard"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/softyellow"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/ViewPDF_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/faq"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/ViewPDF_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQs"
                        android:textColor="@color/darkblue"
                        android:includeFontPadding="false"
                        android:textSize="18sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_below="@+id/ViewPDF_logo"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="20dp">

            <com.google.android.material.card.MaterialCardView
                android:onClick="emergencyHelpCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardBackgroundColor="#F19390"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/emergency_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/eaduan2"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/emergency_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="EMERGENCY?"
                        android:textColor="@color/black"
                        android:includeFontPadding="false"
                        android:textSize="15sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_toRightOf="@+id/emergency_logo"/>


                    <TextView
                        android:id="@+id/emergency_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get in touch with our helpline here."
                        android:includeFontPadding="false"
                        android:textSize="10sp"
                        android:fontFamily="@font/daretro_regular"
                        android:layout_toRightOf="@+id/emergency_logo"
                        android:layout_below="@+id/emergency_txt"/>



                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>





    </LinearLayout>


</RelativeLayout>