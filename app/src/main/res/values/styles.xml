<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/darkblue</item>

        <item name = "android:windowContentTransitions">true</item>


    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/darkblue</item>
        <item name="android:textColorHint">@color/lightblue</item>
        <item name="hintTextColor">@color/darkblue</item>
    </style>

</resources>
